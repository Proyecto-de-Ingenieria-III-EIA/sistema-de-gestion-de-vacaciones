model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          Role?     @relation(fields: [roleId], references: [id])
  roleId        String?
  accounts      Account[]
  sessions      Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Enum_RoleName {
  ADMIN
  USER
}

model Role {
  id    String        @id @default(cuid())
  name  Enum_RoleName
  users User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
