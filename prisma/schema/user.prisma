
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          Role?     @relation(fields: [roleId], references: [id])
  roleId        String?
  accounts      Account[]
  sessions      Session[]

  //Self relation for boss-employee
  boss          User      @relation("EmployeeToManager", fields: [bossId], references: [id])
  bossId        String
  subordinates  User[]    @relation("EmployeeToManager")
  //Opposite with absence
  absences      Absence[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Enum_RoleName {
  ADMIN
  USER
}

model Role {
  id    String        @id @default(cuid())
  name  Enum_RoleName
  users User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
